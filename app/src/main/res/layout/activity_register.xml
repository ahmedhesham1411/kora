<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:layoutDirection="ltr">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.45"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/uploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                app:civ_border_width="@dimen/_2sdp"
                android:background="@drawable/profile_image"
                app:civ_border_color="@color/black"
                android:visibility="gone"/>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/btnn"
            android:id="@+id/txt_name"
            android:drawableStart="@drawable/name"
            tools:ignore="RtlCompat"
            android:paddingStart="@dimen/_15sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Name"
            android:textSize="@dimen/_10ssp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/email_space" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/btnn"
            android:id="@+id/txt_email"
            android:drawableStart="@drawable/email"
            tools:ignore="RtlCompat"
            android:paddingStart="@dimen/_15sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Email"
            android:textSize="@dimen/_10ssp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/password_space" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/btnn"
            android:drawableStart="@drawable/padlock"
            tools:ignore="RtlCompat"
            android:paddingStart="@dimen/_15sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Password"
            android:textSize="@dimen/_10ssp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/txt_password"
            android:inputType="textPassword"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/forget_space" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/btnn"
            android:drawableStart="@drawable/padlock"
            tools:ignore="RtlCompat"
            android:paddingStart="@dimen/_15sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Confirm Password"
            android:textSize="@dimen/_10ssp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/txt_confirm_pass"
            android:inputType="textPassword"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/btnn"
            android:drawableStart="@drawable/phone"
            tools:ignore="RtlCompat"
            android:paddingStart="@dimen/_15sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Phone Number"
            android:textSize="@dimen/_10ssp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/txt_phone"
            android:inputType="number"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            />

        <Button
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/login_btn"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:id="@+id/btn_register"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:id="@+id/login_space"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:gravity="center"
            android:id="@+id/txt_login_using"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="@color/login_btn"
            android:textSize="@dimen/_18ssp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/go_to_login"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>